{
  "name": "extended_event_emitter",
  "version": "0.0.2",
  "description": "An event emitter class that extends node emitter to provide type guard",
  "repository": {
    "type": "git",
    "url": "git@github.com:xpanvictor/mini-event-emitter.git"
  },
  "main": "lib/index",
  "types": "lib/index",
  "files": [
    "lib",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "test": "npx mocha",
    "watch": "npx mocha -w",
    "build": "npx tsc -p .",
    "build-docs": "npx typedoc --out docs src/index.ts",
    "prepublishOnly": "npm run build && npm run build-docs"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "watch-files": [
      "src/**/*.ts",
      "test/**/*.ts"
    ],
    "require": "ts-node/register"
  },
  "author": "xpan victor xpanvictor@gmail.com https://xpanvictor.github.io/",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "chai": "^4.3.4",
    "eslint": "^7.25.0",
    "lint-staged": "^10.5.4",
    "mocha": "^10.7.0",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typedoc": "^0.26.5",
    "typedoc-plugin-markdown": "^3.8.1",
    "typescript": "^4.2.4"
  }
}
